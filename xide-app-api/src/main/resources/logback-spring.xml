<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="false">
  <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
  <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

  <property name="LOG_HOME" value="/var/xide/logs"/>
  <property name="APP_NAME" value="xide-api"/>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <FileNamePattern>
        ${LOG_HOME:-/var/xide/logs}/${APP_NAME}/info/%d{yyyy-MM}/%d{dd}.%i.log
      </FileNamePattern>
      <maxFileSize>100MB</maxFileSize>
    </rollingPolicy>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <appender name="GATE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <FileNamePattern>
        ${LOG_HOME:-/var/xide/logs}/${APP_NAME}/gate/%d{yyyy-MM}/%d{dd}.%i.log
      </FileNamePattern>
      <maxFileSize>100MB</maxFileSize>
    </rollingPolicy>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <appender name="ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <FileNamePattern>
        ${LOG_HOME:-/var/xide/logs}/${APP_NAME}/error/%d{yyyy-MM}/%d{dd}.%i.log
      </FileNamePattern>
      <maxFileSize>100MB</maxFileSize>
    </rollingPolicy>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <appender name="EX" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <FileNamePattern>
        ${LOG_HOME:-/var/xide/logs}/${APP_NAME}/ex/%d{yyyy-MM}/%d{dd}.%i.log
      </FileNamePattern>
      <maxFileSize>100MB</maxFileSize>
    </rollingPolicy>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <logger name="exlog" level="INFO" additivity="false">
    <springProfile name="de">
      <appender-ref ref="CONSOLE"/>
    </springProfile>
    <appender-ref ref="EX"/>
  </logger>

  <logger name="gatelog" level="INFO" additivity="false">
    <springProfile name="de">
      <appender-ref ref="CONSOLE"/>
    </springProfile>
    <appender-ref ref="GATE"/>
  </logger>

  <logger name="com.wondersgroup" level="INFO" additivity="false">
    <springProfile name="de">
      <appender-ref ref="CONSOLE"/>
    </springProfile>
    <appender-ref ref="FILE"/>
  </logger>

  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="FILE"/>
  </root>
</configuration>